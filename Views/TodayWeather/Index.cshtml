@model TodayWeatherDataViewModel


<div class="content-wrapper">
    <div class="weather-container">
        <h1>Today's Weather at @DateTime.Now.Hour</h1>
        <img src="@Model.WeatherImgUrl" alt="Weather Status Image" class="weather-image">
        <div class="weather-data">
            <p>Weather Condition: <span>@Model.WeatherCondition</span></p>
            <p>Average Temperature (C): <span>@Model.AvgTemp_c</span></p>
            <p>Average Temperature (F): <span>@Model.AvgTemp_f</span></p>
            <p>Average Humidity: <span>@Model.AvgHumidity</span></p>
            <p>Average Uv: <span>@Model.AvgUv</span></p>
        </div>
    </div>
</div>

